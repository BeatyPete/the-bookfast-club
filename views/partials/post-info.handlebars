<article id="{{id}}" class="post-container">
        <div class="content-container">
          <img class="cover-img" src="{{cover_img_url}}" >
          <div class="post-text">
            <h1 class="post-title">
              <a href="{{isbn}}" target="_blank">{{title}}</a>
            </h1>
            <p>Written by {{author}}</p>
            <div class="flex justify-between">
              <p>Published: {{publish_date}}</p>
              <p>likes: {{upvote_count}}</p>
            </div>
            <p class="text-right">Recommended by {{user.username}} on {{format_date created_at}}</p>
          </div>
 
        </div>
        <div class="post-btn-container">
          <button class="like-btn">
            <svg class="post-btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"
              />
          </svg>
          </button>
          <button class="fav-btn">
            <svg class="post-btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </article>